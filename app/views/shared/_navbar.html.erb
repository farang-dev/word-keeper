<% if user_signed_in? %>
  <div class="container">
    <div class="mt-4 d-flex justify-content-end">
      <p class="me-2">Hello, <%= current_user.username %> | </p>
      <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete} %>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="mt-4 d-flex justify-content-end">
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    </div>
  </div>
<% end %>
